<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExampleCSS.MainPage">
    <ContentPage.Resources>
        <StyleSheet Source="/Assets/Styles.css" />
    </ContentPage.Resources>
    <StackLayout>
        <Label />
        <Frame StyleClass="ContenedorTitulo" >
            <Label Text="Bienvenido a mi Pagina con CSS!" HorizontalTextAlignment="Center" StyleClass="Titulo" FontFamily="Tabardo"/>
        </Frame>
        <Label />
        <Label Text="Pagina de Aldair Acosta" FontFamily="Tabardo" StyleClass="Label1"></Label>
        <Entry Placeholder="Ingrese un Texto" StyleClass="EntradaTexto"></Entry>
        <Button Text="Carro Deportivo" StyleClass="Boton1" />
        <Image Source="imagen1.jpg" StyleClass="Imagen" />
        <Button BorderColor="Lime" Text="Contenido" StyleClass="Button2" />

    </StackLayout>

</ContentPage>